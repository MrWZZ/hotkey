<Window x:Class="MyTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTool"
        Background="#FFD7D7D7" Title="Quick" Height="100" Width="400" WindowStyle="None" ScrollViewer.VerticalScrollBarVisibility="Disabled" Icon="Resources/favicon.png" ResizeMode="NoResize" PreviewMouseDown="Window_PreviewMouseDown">
    <Grid ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.CanContentScroll="True" Loaded="Grid_Loaded" Opacity="0.8">
        <TextBox x:Name="txtInput" HorizontalAlignment="Center" Height="50" Margin="0" TextWrapping="Wrap" VerticalAlignment="Center" Width="300" Padding="0" FontSize="16" VerticalContentAlignment="Center" TextChanged="TxtInput_TextChanged" PreviewKeyDown="txtInput_KeyDown"/>
        <Label x:Name="lableMessage" Visibility="Hidden" IsHitTestVisible="False" Content="Label" Foreground="Gray" HorizontalContentAlignment="Center" FontSize="16" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="50,25,0,25" VerticalAlignment="Center" Width="300" Height="50"/>
    </Grid>
</Window>
